@using MarketPlace.Application.Utils
@using MarketPlace.Data.DTOs.Orders
@model MarketPlace.Data.DTOs.Products.ProductDetailDTO
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row mb-1">
    <div class="col-12">
        <!-- breadcrumb -->
        <div class="breadcrumb mb-1">
            <nav>
                <a href="/">فروشگاه ساز</a>
                @if (Model.ProductCategories.Any(t => t.ParentId == null))
                {
                    @foreach (var category in Model.ProductCategories.Where(q => q.ParentId == null))
                    {
                        <a> @category.Title</a>
                    }
                }
                <a>@Model.Title<a>
            </nav>
        </div>
        <!-- end breadcrumb -->
    </div>
</div>

<div class="product-detail shadow-around mb-5 py-5">
    <div class="row mb-3 mx-0">
        <div class="col-xl-4 col-lg-4 col-md-6">
            <div class="product-gallery">
                <div class="swiper-container gallery-slider">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="@(FilePath.ProductImageOrigin + Model.ImageName)" alt="@Model.Title">
                        </div>
                        @if (Model.ProductGalleries.Any())
                        {
                            @foreach (var gallery in Model.ProductGalleries)
                            {
                                <div class="swiper-slide">
                                    <img src="@(FilePath.ProductGalleryImageOrigin + gallery.ImageName)" alt="@Model.Title">
                                </div>
                            }
                        }

                    </div>
                </div>
                <div class="swiper-container gallery-slider-thumbs">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="@(FilePath.ProductImageThumb + Model.ImageName)" alt="@Model.Title">
                        </div>
                        @if (Model.ProductGalleries.Any())
                        {
                            @foreach (var gallery in Model.ProductGalleries)
                            {
                                <div class="swiper-slide">
                                    <img src="@(FilePath.ProductGalleryImageThumb + gallery.ImageName)" alt="@Model.Title">
                                </div>
                            }
                        }
                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
                <ul class="product--actions">
                    <li>
                        <!-- در صورت نیاز به استفاده از فرم از کد زیر استفاده کنید -->
                        <!-- <form action="">
