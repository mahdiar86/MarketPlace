@if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
{

    <section class="product-carousel">
        <div class="section-title">
            <i class="fad fa-retweet"></i>
            پیشنهادهای مشابه
        </div>
        <div class="swiper-container slider-lg">
            <div class="swiper-wrapper">
                @foreach (var product in Model.RelatedProducts)
                {

                    <div class="swiper-slide">
                        <div class="product-card">
                            <div class="product-card-top">
                                <a asp-controller="Product" asp-action="ProductDetail" asp-route-title="@product.Title.FixTitleForUrl()" asp-route-productId="@product.Id" class="product-image">
                                    <img src="@(FilePath.ProductImageThumb + product.ImageName)" alt="@product.Title">
                                </a>
                                <div class="product-card-actions">
                                    <button class="add-to-wishlist"><i class="fas fa-heart"></i></button>
                                    <button class="add-to-compare"><i class="fas fa-random"></i></button>
                                </div>
                            </div>
                            <div class="product-card-middle">
                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-val" style="width: 65%;"></div>
                                    </div>
                                </div>
                                <h6 class="product-name">
                                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-title="@product.Title.FixTitleForUrl()" asp-route-productId="@product.Id">
                                        @product.Title
                                    </a>
                                </h6>
                                <div class="product-price product-price-clone">@Model.Price.ToString("#,0") تومان</div>
                            </div>
                            <div class="product-card-bottom">
                                <div class="product-price">
                                    @Model.Price.ToString("#,0") تومان
                                </div>
                                <a href="#" class="btn-add-to-cart">
                                    <i class="fad fa-cart-plus"></i>
                                    افزودن به سبد خرید
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Add Arrows -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </section>
}

