@using MarketPlace.Application.Utils
@using MarketPlace.Application.Extensions
@model List<MarketPlace.Data.Entities.Products.Product>

@if (Model.Any())
{
    <section class="product-carousel in-box">
    <div class="section-title">
        <i class="fad fa-pen-nib"></i>
       آخرین محصولات
    </div>
    <div class="swiper-container slider-lg">
        <div class="swiper-wrapper">
            @foreach (var product in Model)
            {
                <div class="swiper-slide">
                    <div class="product-card">
                        <div class="product-card-top">
                            <a href="" class="product-image">
                                <img src="@FilePath.ProductImageThumb@product.ImageName" alt="@product.Title">
                            </a>
                            <div class="product-card-actions">
                                <button class="add-to-wishlist"><i class="fas fa-heart"></i></button>
                                <button class="add-to-compare"><i class="fas fa-random"></i></button>
                            </div>
                        </div>
                        <div class="product-card-middle">
                            <div class="ratings-container">
                                <div class="ratings">
                                    <div class="ratings-val" style="width: 65%;"></div>
                                </div>
                            </div>
                            <h6 class="product-name">
                                <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@product.Id" asp-route-title="@product.Title.Replace(" ", "-")">
                                    @product.Title
                                </a>
                            </h6>
                            <div class="product-price product-price-clone">@product.GetProductPrice().ToString("#,0") تومان</div>
                        </div>
                        <div class="product-card-bottom">
                            <div class="product-price">
                                @product.GetProductPrice().ToString("#,0") تومان
                            </div>
                            <a href="#" class="btn-add-to-cart">
                                <i class="fad fa-cart-plus"></i>
                                افزودن به سبد خرید
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</section>
}