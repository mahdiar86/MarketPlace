@model MarketPlace.Data.DTOs.Paging.BasePaging

@section Script{
<script src="/js/custom.js"></script>
}

<div class="col-xs-12">
    <div class="pagination">
        @if (Model.StartPage < Model.PageId)
        {
            <a onclick="FillPageId(@(Model.PageId-1))" class="prev"><i class="far fa-arrow-from-left"></i></a>
        }
        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <a onclick="FillPageId(@i)" class="@(Model.PageId == i ? "current" : "") custom-pointer">@i</a>
        }
        @if (Model.EndPage > Model.PageId)
        {
            <a onclick="FillPageId(@(Model.PageId+1))" class="next"><i class="far fa-arrow-to-left"></i></a>
        }
    </div>

</div>