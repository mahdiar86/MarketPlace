@using MarketPlace.Data.DTOs.Account
@model LoginUserDTO
@{
    ViewData["Title"] = "ورود";
}

<div class="auth-wrapper">
    <div class="auth-form shadow-around">
        <div class="site-logo">
            <a href="#">
                <img src="/images/logo.png" alt="logo">
            </a>
        </div>
        <div class="auth-form-title">
            ورود
        </div>
        <form asp-action="Login" asp-controller="Account">
            <div class="form-element-row">
                <label for="phone-number" class="label-element">شماره موبایل</label>
                <div class="form-element-with-icon">
                    <input asp-for="Mobile" class="input-element" id="phone-number">
                    <i class="fad fa-mobile-alt"></i>
                </div>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-element-row">
                <label for="password" class="label-element">
                    <span class="d-flex justify-content-between">
                        <span>کلمه عبور</span>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="link--with-border-bottom">رمز عبور خود را فراموش کرده‌ام</a>
                    </span>
                </label>
                <div class="form-element-with-icon">
                    <input asp-for="Password" type="password" class="input-element" id="password">
                    <i class="fad fa-key-skeleton"></i>
                </div>
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-element-row">
                <label class="container-checkbox">
                    مرا به خاطر داشته باش
                    <input asp-for="RememberMe" type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <partial name="_CaptchaInput"/>
            <div class="form-element-row text-left">
                <button class="btn-element btn-info-element">
                    <i class="fad fa-sign-in-alt"></i>
                    ورود به فروشگاه ساز
                </button>
            </div>

        </form>
        <div class="auth-form-footer">
            <span>کاربر جدید هستید؟</span>
            <a href="/Register" class="link--with-border-bottom">ثبت نام در فروشگاه ساز</a>
        </div>
    </div>
</div>

@section Script {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <partial name="_CaptchaScripts" />
}


