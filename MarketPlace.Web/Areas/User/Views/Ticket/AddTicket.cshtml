@using MarketPlace.Data.Entities.Contacts
@model MarketPlace.Data.DTOs.Contacts.AddTicketDTO
@{
    ViewData["Title"] = "افزودن تیکت جدید";
}

@section Script
{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container" style="transform: none;">
    <div class="row mb-5" style="transform: none;">
        <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">

            @await Component.InvokeAsync("UserSidebar")

        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="section-title mb-2">
                        @ViewData["Title"]
                    </div>
                    <section class="shadow-around p-3">
                        <form method="post" asp-action="AddTicket" asp-controller="Ticket" asp-area="User">
                            <div class="row justify-content-center">
                                <div class="col-lg-8 mb-5">
                                    <div class="text-sm text-muted mb-3">موضوع تیکت</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <select class="input-element" asp-for="TicketSection" asp-items="@(Html.GetEnumSelectList<TicketSection>())"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-8 mb-5">
                                    <div class="text-sm text-muted mb-3">اولویت تیکت</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <select class="input-element" asp-for="TicketPriority" asp-items="@(Html.GetEnumSelectList<TicketPriority>())"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-8 mb-5">
                                    <div class="text-sm text-muted mb-3">عنوان تیکت</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="Title" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="col-lg-8 mb-5">
                                    <div class="text-sm text-muted mb-3">متن تیکت</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <textarea ckeditor="ckeditor" asp-for="Text" class="input-element"></textarea>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>

                                <div class="col-lg-8 mb-5">
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <button type="submit" class="btn btn-info">ثبت تیکت جدید</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-01.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-02.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-03.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-04.jpg" alt="banner">
                </a>
            </div>
        </div>
    </div>
</div>



