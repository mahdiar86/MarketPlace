@model MarketPlace.Data.DTOs.Account.ChangePasswordDTO
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}
@section Script {
 <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>       
 <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>       
}

<div class="container" style="transform: none;">
    <div class="row mb-5" style="transform: none;">
        <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">

            @await Component.InvokeAsync("UserSidebar")

        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="section-title mb-2">
                        @ViewData["Title"]
                    </div>
                    <section class="shadow-around p-3">
                        <form method="post" asp-action="ChangePassword" asp-controller="Account" asp-area="User">
                            <div class="row">
                                <div class="col-lg-7 mb-5">
                                    <div class="text-sm text-muted mb-3">رمز عبور فعلی</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="CurrentPassword" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 mb-5">
                                    <div class="text-sm text-muted mb-3">رمز عبور جدید</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="NewPassword" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 mb-5">
                                    <div class="text-sm text-muted mb-3">تکرار رمز عبور جدید</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="ConfirmNewPassword" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-element-row text-right">
                                        <button class="btn-element btn-success-element">
                                            <i class="fad fa-user-edit"></i>
                                            ذخیره تغییرات
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-01.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-02.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-03.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-04.jpg" alt="banner">
                </a>
            </div>
        </div>
    </div>
</div>

