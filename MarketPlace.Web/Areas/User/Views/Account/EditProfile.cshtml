@using MarketPlace.Application.Utils
@model MarketPlace.Data.DTOs.Account.EditUserProfileDTO
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

@section Script {
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container" style="transform: none;">
    <div class="row mb-5" style="transform: none;">
        <div class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar" style="position: relative; overflow: visible; box-sizing: border-box; min-height: 1px;">
            @await Component.InvokeAsync("UserSidebar")
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="section-title mb-2">
                        @ViewData["Title"]
                    </div>
                    <section class="shadow-around p-3">
                        <form method="post" asp-action="EditProfile" asp-controller="Account" asp-area="User" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6 mb-5">
                                    <div class="text-sm text-muted mb-3">نام</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="FirstName" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 mb-5">
                                    <div class="text-sm text-muted mb-3">نام خانوادگی</div>
                                    <div class="text-dark font-weight-bold">
                                        <div class="form-element-row mb-0">
                                            <input asp-for="LastName" class="input-element">
                                        </div>
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-5">
                                    <input type="file" name="avatarImage" />
                                </div>

                                <div class="col-md-6 mb-5">
                                    <img src="@(!string.IsNullOrEmpty(Model.Avatar) ? FilePath.UserAvatarOrigin + Model.Avatar : FilePath.DefaultAvatar)" class="img-thumbnail profile-style" />
                                </div>

                                <div class="col-12">
                                    <div class="form-element-row text-right">
                                        <button class="btn-element btn-info-element">
                                            <i class="fad fa-user-edit"></i>
                                            ذخیره تغییرات
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-01.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-02.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-03.jpg" alt="banner">
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-lg-0 mb-3">
            <div class="banner">
                <a href="#">
                    <img src="/images/banner/banner-sm-04.jpg" alt="banner">
                </a>
            </div>
        </div>
    </div>
</div>

